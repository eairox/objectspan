<h1><%= @store.name %></h1>

<div class="row">
  

  <div class="span4">
    <ul class="thumbnails">
      <li class="span3">
        <%= image_tag @store.photo.url(:small) %>
      </li>
      <li>
        <strong>Description:</strong><%= simple_format(@store.description) %>
      </li>
    </ul>
  </div>

  <div class="span4">
    <strong>Store Information: </strong>
    <br><%= @store.address1 %>
    <% if !@store.address2.nil? %>
      <%= @store.address2 %>
    <% end %>
    <br><%= @store.city%>, <%= @store.state.state_code unless @store.state.nil? %> 
    <%= @store.zipcode %>, <%= @store.country.name unless @store.country.nil?  %> 
    <br><strong>Phone:</strong> <%= @store.phone %>
    <br>Fax: <%= @store.fax %>
    <br>web: <%= @store.store_url %>
    <br>Email: <%= @store.email %>
    <br>Company:<%= link_to @store.company.name, @store.company %>
    <br>Store number:<%= @store.store_number %>
    <br>Store type:<%= @store.store_type.name %>
  </div>
  
  <div class="span4">
    <b>Friends who have shopped here:</b>
    <% @store.purchases.each do |p| %>
    <br><%= p.user.name unless p.user.nil? %> 
    <% end %>
  </div>

</div>

<br>
<%= link_to 'Edit', edit_store_path(@store) %> |
<%= link_to 'Back', stores_path %>
