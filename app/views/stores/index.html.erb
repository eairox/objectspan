<h1>Store List</h1>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Company</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Phone</th>
    <th>Store url</th>
    <th>Rating</th>
    <th>Fax</th>
    <th>Email</th>
    <th>Store type</th>
    <th>Store number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= link_to store.name, store %></td>
    <td><%= store.company.name %></td>
    <td><%= store.city %></td>
    <td><%= store.state.name unless store.state_id.nil?%></td>
    <td><%= store.country.name %></td>
    <td><%= store.phone %></td>
    <td><%= store.store_url %></td>
    <td><%= store.rating %></td>
    <td><%= store.fax %></td>
    <td><%= store.email %></td>
    <td><%= store.store_type.name %></td>
    <td><%= store.store_number %></td>
    <td><%= link_to 'Edit', edit_store_path(store) %></td>
    <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

