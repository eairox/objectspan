     <%= f.select(:return_store_id, Store.all.collect{ |g| [g.name, g.id]},  :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :return_tracking %><br />
    <%= f.text_field :return_tracking %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
