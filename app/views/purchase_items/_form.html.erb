<%= form_for(@purchase_item) do |f| %>
  <% if @purchase_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase_item.errors.count, "error") %> prohibited this purchase_item from being saved:</h2>

      <ul>
      <% @purchase_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :purchase_id %><br />
     <%= f.select(:purchase_id, Purchase.all.collect{ |g| [g.name, g.id]},  :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :item_id %><br />
     <%= f.select(:item_id, Item.all.collect{ |g| [g.name, g.id]},  :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :serial_number %><br />
    <%= f.text_field :serial_number %>
  </div>
  <div class="field">
    <%= f.label :store_id %><br />
     <%= f.select(:store_id, Store.all.collect{ |g| [g.name, g.id]},  :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :purchase_status_id %><br />
     <%= f.select(:purchase_status_id, PurchaseStatus.all.collect{ |g| [g.name, g.id]},  :include_blank => true) %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :tax %><br />
    <%= f.text_field :tax %>
  </div>
  <div class="field">
